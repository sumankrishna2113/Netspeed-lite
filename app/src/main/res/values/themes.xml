<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.DataUsagemeterlite" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/textOnDark</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/textOnDark</item>
        
        <!-- Status Bar (Light Mode Fix) -->
        <item name="android:statusBarColor">@color/colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Navigation Bar (Light Mode Fix) -->
        <item name="android:navigationBarColor">@color/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Backgrounds -->
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceElevated</item>
        
        <!-- Typography Colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:textColorTertiary">@color/textTertiary</item>

        <!-- Components -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="materialSwitchStyle">@style/Widget.App.Switch</item>
        <item name="alertDialogTheme">@style/Theme.App.Dialog</item>
    </style>

    <style name="Theme.DataUsagemeterlite" parent="Base.Theme.DataUsagemeterlite" />
    
    <!-- Custom Dialog Theme -->
    <style name="Theme.App.Dialog" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:background">@drawable/bg_dialog_rounded</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- Ensure dialog text is readable in light mode -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/colorSurface</item>
        <item name="cardElevation">2dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="strokeColor">@color/colorStroke</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Custom Switch Style -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/selector_switch_thumb</item>
        <item name="trackTint">@color/selector_switch_track</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>